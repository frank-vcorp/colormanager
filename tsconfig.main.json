{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "outDir": "dist-electron",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ]
}
