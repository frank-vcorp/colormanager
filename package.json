{
  "name": "colormanager",
  "version": "0.0.1",
  "description": "Auditor de Mezclas - Sistema de control de producción para taller de igualación automotriz",
  "type": "module",
  "main": "dist-electron/main/main.cjs",
  "homepage": "./",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json && find dist-electron -name '*.js' ! -name '*.map' -exec sh -c 'mv \"$1\" \"${1%.js}.cjs\"' _ {} \\;",
    "watch:main": "node scripts/watch-main.mjs",
    "dev": "concurrently -k \"npm run build:main -- -w\" \"vite\" \"wait-on http://localhost:5173 && wait-on dist-electron/main/main.cjs && ELECTRON_DISABLE_GPU=1 electron . --no-sandbox --disable-gpu\"",
    "dev:headless": "pnpm run build:main && concurrently -k \"pnpm run watch:main\" \"vite\"",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "@tanstack/react-query": "^5.51.21",
    "chokidar": "^5.0.0",
    "csv-parse": "^6.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.12.5",
    "uuid": "^10.0.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/node": "^20.12.12",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/xlsx": "^0.0.36",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "postcss": "^8.4.39",
    "prisma": "^5.21.1",
    "serialport": "^9.2.8",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "wait-on": "^7.2.0"
  }
}
